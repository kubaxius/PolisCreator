	#set slider position to fit zoom of 1
	var min_zoom = ProjectSettings.get_setting(\"Others/Camera/zoom/min\")
	var max_zoom = ProjectSettings.get_setting(\"Others/Camera/zoom/max\")
	value = (1-max_zoom)/(min_zoom - max_zoom)"

